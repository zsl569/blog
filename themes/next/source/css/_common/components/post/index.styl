.rtl {
  &.post-body {
    p, a, h1, h2, h3, h4, h5, h6, li, ul, ol {
      direction: rtl;
      font-family: UKIJ Ekran;
    }
  }

  &.post-title {
    font-family: UKIJ Ekran;
  }
}

.post-button {
  margin-top: 40px;
  text-align: center;
}

.use-motion {
  if (hexo-config('motion.transition.post_block')) {
    .post-block{
      border-radius: 20px;
      margin-top: 60px;
      margin-bottom: 60px;
      padding: 25px;
      -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
      -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
    }
    .post-block:first-of-type {
      padding-top: 20px;
    }
    
    .post-body p h1 h2 h3 h4 h5 h6 span{
      color: #222;
    }
    .post-title {
      text-align: center;
      color: #222;
    }
    .post-title a {
      text-align: center;
      color: #222;
    }
    .posts-expand.index .post-meta {
      justify-content: center;
    }

    .posts-expand .post-tags {
      text-align: center;
    }

    .post-button {
      margin-top: 20px;
      text-align: center;
    }
    //.post-block, .pagination, .comments {
    //  visibility: hidden;
    //}
  }

  if (hexo-config('motion.transition.post_header')) {
    .post-header {
      visibility: hidden;
    }
  }

  if (hexo-config('motion.transition.post_body')) {
    .post-body {
      visibility: hidden;
    }
  }

  if (hexo-config('motion.transition.coll_header')) {
    .collection-header {
      visibility: hidden;
    }
  }
}

@import 'post-collapse';
@import 'post-body';
@import 'post-gallery';
@import 'post-header';
@import 'post-nav';
@import 'post-footer';
@import 'post-widgets';
@import 'post-reward';
@import 'post-followme';
